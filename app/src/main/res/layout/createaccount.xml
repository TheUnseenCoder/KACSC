<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".SignUpChoices"
    android:fontFamily="@font/lexenddeca">

    <TextView
        android:id="@+id/trbs"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:background="@drawable/kna_logo"
        android:fontFamily="@font/lexenddeca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="81dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexenddeca"
        android:gravity="center_horizontal"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/pink1"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203" />

    <EditText
        android:id="@+id/cetotp"
        android:layout_width="140dp"
        android:layout_height="39dp"
        android:background="@drawable/bg_edit_text"
        android:digits="1234567890"
        android:ems="10"
        android:fontFamily="@font/lexenddeca"
        android:hint="OTP"
        android:textSize="15dp"
        android:elevation="5dp"
        android:inputType="number"
        android:textColor="@color/pink1"
        android:textColorHint="@color/pink1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="247dp"
        android:layout_height="42dp"
        android:backgroundTint="@color/pink1"
        android:fontFamily="@font/lexenddeca"
        android:text="REGISTER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863" />

    <EditText
        android:id="@+id/cetfullname"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:fontFamily="@font/lexenddeca"
        android:hint="Full Name"
        android:textSize="15dp"
        android:elevation="5dp"
        android:inputType="text"
        android:textColor="@color/pink1"
        android:textColorHint="@color/pink1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <EditText
        android:id="@+id/cetpassword"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:fontFamily="@font/lexenddeca"
        android:hint="Password"
        android:textSize="15dp"
        android:elevation="5dp"
        android:inputType="textPassword"
        android:textColor="@color/pink1"
        android:textColorHint="@color/pink1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />

    <EditText
        android:id="@+id/cetemail"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:fontFamily="@font/lexenddeca"
        android:hint="Email"
        android:textSize="15dp"
        android:elevation="5dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/pink1"
        android:textColorHint="@color/pink1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/cetconfirm_password"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:fontFamily="@font/lexenddeca"
        android:hint="Confirm Password"
        android:textSize="15dp"
        android:elevation="5dp"
        android:inputType="textPassword"
        android:textColor="@color/pink1"
        android:textColorHint="@color/pink1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.614" />

    <Button
        android:id="@+id/btnsendOTP"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/pink1"
        android:fontFamily="@font/lexenddeca"
        android:text="Send OTP"
        android:gravity="center"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />


</androidx.constraintlayout.widget.ConstraintLayout>