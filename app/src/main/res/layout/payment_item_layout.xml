<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <!-- Item Rows -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/order_id_text_view"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:padding="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/transaction_id_text_view"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:padding="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/payer_id_text_view"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:padding="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/payer_fullname_text_view"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:padding="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/payment_status_text_view"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:padding="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/date_time_text_view"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:padding="8dp"
                            android:gravity="center_horizontal"/>

                </TableRow>

        </TableLayout>

</LinearLayout>